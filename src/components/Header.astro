<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 2rem;
    background-color: #fff;
    border-bottom: 5px solid var(--grøn);
    position: relative;
    margin-bottom: 2rem;
  }

  .logo img {
    height: 100px;
    width: auto;
  }

  nav ul.menu {
    display: flex;
    gap: 2rem;
    list-style: none;
  }

  nav a {
    text-decoration: none;
    color: var(--sort);
    font-size: 18px;
  }

  nav a:hover {
    color:var(--lyserød);
  }

  /* Burger menu */
  .burger {
    display: none;
    flex-direction: column;
    gap: 5px;
    cursor: pointer;
  }

  .burger div {
    width: 20px;
    height: 3px;
    background-color: var(--grøn);
  }

  @media (max-width: 768px) {
     .header {
      flex-direction: row;
      justify-content: space-between;
    }
    nav {
      position: absolute;
      top: 100%;
      left: 0;
      background-color: var(--hvid);
      width: 100%;
      display: none;
      padding: 1rem 2rem;
      z-index: 10;
    border: 5px solid var(--grøn);
    }

    nav.active {
      display: block;
    }

    nav ul.menu {
      flex-direction: column;
      gap: 1rem;
      text-align: right;
    }

    .burger {
      display: flex;
    }
  }

</style>

