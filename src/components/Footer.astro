---
import insta_footer from '../assets/insta_footer.png';
import tiktok_footer from '../assets/tiktok_footer.png';
---

<footer>
     <div class="footer">
        <div class="left_footer">
        <h3>Opening Hours:</h3>
        <p>Mon-Fri: 10am-6pm</p>
        <p>Saturday: 10am-4pm</p>
        <p>Sunday: 11am-4pm</p>
        <h3>Address:</h3>
        <p>Farvergade 2, Copenhagen 1463</p>
    </div>
    <div class="center_footer">
        <h3>Check out our Social Media Channels</h3>
        <img class="insta_footer" src={insta_footer.src} alt="insta footer">
         <img class="tiktok_footer" src={tiktok_footer.src} alt="insta footer">
    </div>
    <div class="right_footer">
        <h3>For bookings at Studio 27 and Freddie'o:</h3>
       <p> <a href="https://josefinejensen.planway.com/" class="studio27_link">Studio 27</a></p>
       <p> <a href="https://freddieohair-26975.planway.com/" class="freddieo_link">Freddie'o</a></p>
    </div>
    </div>
</footer>

<style>
.footer{
    background-color:rgba(189, 204, 165, 1) ;
    text-align: center;
    padding: 20px;
}
.insta_footer{
    width: 35px;
    height: auto;
    margin-right: 20px;
    text-align: center;
}
.tiktok_footer{
    width: 30px;
    height: auto;
    text-align: center;
}
.studio27_link, .freddieo_link{
    color:black;            
    text-decoration: underline; 
}

 @media screen and (min-width: 900px) { 
    .footer{
        display: flex; /* Optager 1 del af pladsen */
    }
    .left_footer{
        flex: 1; /* Optager 1 del af pladsen */
        text-align: left;
    }
    .center_footer{
        flex: 1; /* Optager 1 del af pladsen */
        text-align: center;
    }
    .right_footer {
       flex: 1;
       text-align: right;
}
    .insta_footer{
        width: 45px;
        height: auto;
    }
    .tiktok_footer{
        width: 40px;
        height: auto;
    }
}

</style>